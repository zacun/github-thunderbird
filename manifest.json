{
    "manifest_version": 2,
    "name": "Githund Extension",
    "description": "Github extension for thunderbird",
    "version": "1.0",
    "author": "LÃ©o Henini - Paulin Bat",
    "applications": {
        "gecko": {
            "id": "githund@yoursite.com",
            "strict_min_version": "1"
        }
    },
    "content_security_policy": "script-src 'self' https://cdn.skypack.dev/@octokit/core; object-src 'self'",
    "background": {
        "scripts": [
          "./js/background.js"
        ]
    },
    "browser_action": {
        "default_title": "Open Githund"
    },
    "permissions": [
        "messagesRead",
        "accountsRead",
        "messagesMove",
        "accountsFolders",
        "menus",
        "tabs",
        "storage"
    ]
}